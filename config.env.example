# Configuration file for MPD Web Control
# Copy this to config.env and update the values

# MPD Connection Settings
MPD_HOST=localhost
MPD_PORT=6600
MPD_TIMEOUT=10
MUSIC_DIRECTORY=/media/music

# Last.fm API Configuration
# Get your API key and shared secret from https://www.last.fm/api
LASTFM_API_KEY=your-api-key-here
LASTFM_SHARED_SECRET=your-shared-secret-here

# Optional System Configuration
# Set to show a "Maestro Config" button linking to external config interface
MAESTRO_CONFIG_URL=http://your-config-server:5000

# Flask Security
SECRET_KEY=your-secret-key-change-this-in-production

# Application Settings
APP_PORT=5000
APP_HOST=0.0.0.0
DEBUG=False